<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".splashActivity.SplashActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_pizza"
            android:layout_width="@dimen/margin_dp150"
            android:layout_height="@dimen/margin_dp150"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_dp5"
            android:src="@drawable/piza" />

        <ImageView
            android:id="@+id/img_applog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_pizza"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/margin_dp5"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/tv_savetime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_applog"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="Save Time &amp; Money\nEveryday"
            android:textColor="@color/colorTextGreen"
            android:textSize="@dimen/textsize_sp22" />

        <RelativeLayout
            android:id="@+id/layout_book"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_savetime"
            android:layout_marginTop="@dimen/margin_dp10">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:src="@drawable/book" />

            <TextView
                android:id="@+id/tv_upto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/margin_dp35"
                android:text="Up to"
                android:textColor="@color/colorTextWhite"
                android:textSize="@dimen/textsize_sp22" />

            <TextView
                android:id="@+id/tv_discount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_upto"
                android:layout_alignEnd="@+id/tv_upto"
                android:layout_marginLeft="-20dp"
                android:text="60%"
                android:layout_marginTop="-5dp"
                android:textColor="@color/colorTextWhite"
                android:textSize="@dimen/textsize_sp32"
                android:layout_alignRight="@+id/tv_upto" />

            <TextView
                android:id="@+id/tv_off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_upto"
                android:layout_toRightOf="@+id/tv_upto"
                android:layout_marginTop="-10dp"
                android:text="Off"
                android:layout_marginLeft="@dimen/margin_dp8"
                android:textColor="@color/colorTextWhite"
                android:textSize="@dimen/textsize_sp22" />


        </RelativeLayout>

        <ImageView
            android:id="@+id/img_banner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:scaleType="fitXY"
            android:src="@drawable/bottom_banner" />


    </RelativeLayout>
</RelativeLayout>